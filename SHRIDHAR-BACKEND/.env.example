# Server Configuration
PORT=5000
NODE_ENV=production

# Database
MONGO_URI=your_mongodb_connection_string

# Authentication
JWT_SECRET=your_ultra_secure_jwt_secret
JWT_EXPIRES_IN=90d
COOKIE_SECRET=your_secure_cookie_secret

# Security & CORS
# List allowed origins separated by commas (no spaces)
ALLOWED_ORIGINS=https://your-frontend-domain.com
# The URL of your frontend application
FRONTEND_URL=https://your-frontend-domain.com

# Google OAuth
GAUTH_CLIENT_ID=your_google_client_id
GAUTH_CLIENT_SECRET=your_google_client_secret

# ReCAPTCHA
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
ENABLE_CAPTCHA=true

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AI Configuration (Optional)
OPENROUTER_API_KEY=your_openrouter_key
